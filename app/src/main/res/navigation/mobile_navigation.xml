<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_blank">

    <fragment
        android:id="@+id/navigation_blank"
        android:name="com.abrarsardar.insta.ui.home.HomeFragment"
        android:label="blank"
        tools:layout="@layout/fragment_blank" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.abrarsardar.insta.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.abrarsardar.insta.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.abrarsardar.insta.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_heart"
        android:name="com.abrarsardar.insta.ui.heart.HeartFragment"
        android:label="Heart"
        tools:layout="@layout/heart_fragment" />
    <fragment
        android:id="@+id/navigation_user"
        android:name="com.abrarsardar.insta.ui.heart.HeartFragment"
        android:label="Heart"
        tools:layout="@layout/user_fragment" />
</navigation>